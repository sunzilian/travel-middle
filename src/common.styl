// 新增或编辑的弹框
.el-dialog
  border-radius 6px
  .el-dialog__header
    padding 20px
  .el-dialog__body
    padding 10px 20px 20px
    .el-form-item
      width 100%
      margin-bottom 16px
      margin-right 0
      .el-form-item__content
        width calc(100% - 150px)
        .el-select
          width 100%
        .el-input__inner
          background-color #fff
        .el-date-editor
          .el-input__inner
            background-color #fafaff
// 取消按钮2
.item-cancel,.item-cancel:focus
  color #4f4f5c
  background-color #fff
  border-radius 4px
  border solid 1px #e1e1ed
  &:hover
    color #4f4f5c
    background-color #fbfbfb
// 删除时的弹框
.el-message-box
  .el-message-box__header
    .el-icon-warning
      &:before
        content ''
  .el-message-box__content
    p
      font-size 16px
  .el-message-box__btns
    text-align right
    padding-top 20px
    .el-button:hover
      color #4f4f5c
      background-color #fbfbfb
    .el-button--primary:hover
      color #fff
      background-color #66b1ff
// 单选按钮颜色
.el-radio__input.is-checked
  .el-radio__inner
    border-color #029aef
    background #029aef
  &+.el-radio__label
    color #029aef
// switch显示问题
.el-switch.is-checked
  .el-switch__core:after
    left 100%
    margin-left -17px
.el-switch__core:after
  content ""
  position absolute
  top 1px
  left 1px
  border-radius 100%
  transition all .3s
  width 16px
  height 16px
  background-color #fff
// 时间范围选择器
.el-date-range-picker.has-time
  left 660px!important